@{
    ViewData["Title"] = "Página de Inicio - NutriPlat";
    Layout = "_Layout"; // Asegúrate de que Views/Shared/_Layout.cshtml exista
}

<div class="container mx-auto mt-8 px-4 text-center">
    <div class="bg-white p-10 rounded-lg shadow-xl">
        <h1 class="text-4xl font-bold text-teal-600 mb-6">
            Bienvenido a NutriPlat WebApp
        </h1>
        <p class="text-lg text-gray-700 mb-8">
            Esta es la plataforma para Administradores, Nutricionistas y Entrenadores.
        </p>
        <div class="space-x-4">
            <a asp-controller="Account" asp-action="Login"
               class="bg-teal-500 hover:bg-teal-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition duration-150 ease-in-out">
                Iniciar Sesión
            </a>
        </div>
    </div>

    <div class="mt-12">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Funcionalidades Principales</h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold text-teal-600 mb-2">Gestión de Clientes</h3>
                <p class="text-gray-600">Vincula y gestiona la información de tus clientes.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold text-teal-600 mb-2">Planes y Rutinas</h3>
                <p class="text-gray-600">Crea, asigna y supervisa planes de nutrición y rutinas de entrenamiento.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold text-teal-600 mb-2">Seguimiento de Progreso</h3>
                <p class="text-gray-600">Visualiza el progreso de tus clientes para optimizar sus resultados.</p>
            </div>
        </div>
    </div>
</div>
